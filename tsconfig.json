{
    "extends": "./.svelte-kit/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "build",
        "rootDirs": [
            ".",
            "./.svelte-kit/types",
            "./$houdini/types"
        ],
        "types": ["vitest/globals"]
    },
    "include": ["src/**/*"],
    "exclude": ["build/**/*", "vitest/**/*"]
}